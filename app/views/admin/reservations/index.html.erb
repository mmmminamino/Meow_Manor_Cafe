<div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h2>予約一覧</h2>
            <div class="order-table">
                    <table class="table table-hover table-inverse">
                        <thead>
                            <tr>
                                <th>予約者氏名</th>
                                <th>予約日時</th>
                                <th>訪問人数</th>
                                <th>訪問状況</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @reservations.each do |reservation| %>
                            <tr>
                                <% if reservation.customer.present? %>
                                    <td><%= reservation.customer.first_name %><%= reservation.customer.last_name %>様</td>
                                <%else%>
                                    <td>予約者不明</td>
                                <%end%>
                                <td><%= reservation.date_and_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
                                <td><%= reservation.number_of_people %>名様</td>
                                <td><%= reservation.status %></td>
                            </tr>
                            <%end%>
                            <%= paginate @reservations %>
                        </tbody>
                    </table>
            </div>
        </div>
</div>
