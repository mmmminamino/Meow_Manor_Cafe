            <div class="edit-cats">
                <div class="col-xs-10 col-xs-10 col-xs-offset-1">
                    <div class="row">
                        <%= form_with model: @cat, url: admin_cat_path do |f| %>
                            <h2>猫の登録情報編集</h2>
                            <div class= "item-new-form">
                                <%= f.file_field :image, accept: "image/*" %>
                            </div>
                          　<div class="product-img" style="margin-top: 20px;">
                                <%= image_tag @cat.image, size: "300x200" %>
                            </div>
                                <table class="table table-hover table-inverse">
                                    <tbody>
                                        <tr>
                                            <th>名前</th>
                                            <td><%= f.text_field :name, class: "form-control" %></td>
                                        </tr>
                                        <tr>
                                            <th>特徴</th>
                                            <td><%= f.text_area :introduction, class: "form-control" %></td>
                                        </tr>
                                        <tr>
                                            <th>年齢</th>
                                            <td style="white-space: nowrap;"><%= f.text_field :age, class: "form-control" %>才</td>
                                        </tr>
                                        <tr>
                                            <th>性別</th>
                                            <td><%= f.radio_button :genders, Cat.genders.key(0) %>
                                            <%= f.label :gender_male, "男の子" %></td>
                                            <td><%= f.radio_button :genders, Cat.genders.key(1) %>
                                            <%= f.label :gender_female, "女の子" %></td>
                                        </tr>
                                        <tr>
                                          <th>種類</th>
                                          <td><%= f.text_field :cat_type, class: "form-control" %></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="text-right">
                                    <%= f.submit "編集する", class: "btn btn-outline-dark " %>
                                    <%= link_to "削除する", admin_cat_path(@cat), method: :delete, class: "btn btn-outline-danger" %>
                                </div>
                        <%end%>
                    </div>
                </div>
            </div>
        </body>
    </main>
</html>
</html>