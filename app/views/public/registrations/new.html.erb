<div class="col-xs-10 col-xs-10 col-xs-offset-1">registration_path(resource_name)
<div class="row">
  <h2>Sign up</h2>
    <%= render "public/shared/error_messages", resource: resource %>
    <%= form_with model: @customer, url:registration_path(resource_name) do |f| %>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <th><%= f.label :Name %></th>
          <td>(姓)<%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>  (名)<%= f.text_field :first_name, autofocus: true, placeholder:"道子" %></td>
        </tr>
        <tr>
          <th><%= f.label :フリガナ %></th>
          <td>(姓)<%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ" %>  (名)<%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ" %></td>
        </tr>
        <tr>
          <th><%= f.label :Email %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label :"電話番号(ハイフンなし)" %></th>
          <td><%= f.text_field :telephone_number, autofocus: true, placeholder:"00000000000" %></td>
        </tr>
        <tr>
          <th><%= f.label :"生年月日" %></th>
          <td><%= f.date_select :birthday, {start_year: 1950, end_year: 2023,
          include_blank: true, use_two_digit_numbers: true},
          {class: "input-tab birthday-select"} %></td>
        </tr>
        <tr>
          <th><%= f.label :password %></th>
          <td><%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %></td>
        </tr>
        <tr>
          <th><%= f.label :password_confirmation %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </tbody>
    </table>
    <div class="actions col-xs-10 col-xs-offset-2">
      <%= f.submit "Sign up", class: "btn btn-outline-dark" %>
      <%=link_to "Log in", new_customer_session_path, class: "btn btn-primarys" %>
    </div>
    <% end %>
</div>
</div>
