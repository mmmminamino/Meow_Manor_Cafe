<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :Name %><br />
    <p>(姓)</p><%= f.text_field :last_name, autofocus: true, placeholder:"令和" %><p>(名)</p><%= f.text_field :first_name, autofocus: true, placeholder:"道子" %>
  </div>
  
  <div class="field">
    <%= f.label :フリガナ %>
    <p>(姓)</p><%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ" %><p>(名)</p><%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, placeholder:"00000000000" %>
  </div>
  
  <div class="field">
    <%= f.label :"生年月日" %>
    <%= f.date_select :birthday, {start_year: 1950, end_year: 2016,
    include_blank: true, use_two_digit_numbers: true},
    {class: "input-tab birthday-select"} %>
    
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
