<!--マイページ-->
<div class="col-xs-10 col-xs-offset-1">
    <div class="row">
        <div class="col-xs-7">
            <h4>ご登録情報</h4>
            <table class="table table-striped table-light">
                <tbody>
                    <tr>
                        <th>氏名</th>
                        <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
                    </tr>
                    <tr>
                        <th>カナ</th>
                        <td><%= current_customer.last_name_kana %> <%=current_customer.first_name_kana %></td>
                    </tr>
                    <tr>
                        <th>お電話番号</th>
                        <td><%= current_customer.telephone_number %></td>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <td><%= current_customer.email %></td>
                    </tr>
                    <tr>
                        <th>生年月日</th>
                        <td><%= current_customer.birthday %></td>
                    </tr>
                </tbody>
            </table>
            <%= link_to "編集する", public_customers_edit_path, class: 'btn btn-outline-success' %>
            <%= link_to '過去のご予約一覧へ', public_my_page_reservations_path, class: "btn btn-outline-dark", style: "margin: 10px;" %>
        </div>
    </div>
</div>
