                                    </tr>
                                </thead>
                                <tbody>
                                    <% @reservations.each do |reservation| %>
                                        <tr>
                                            <td class="text-left">
                                            </td>
                                            <td class="text-right">
                                            </td>
                                            <td class="text-right">
                                            </td>
                                            <td class="text-right">
                                            </td>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-9 billing">
                              <table class="table table-hover table-condensed table-bordered">
                                  <tr>
                                     <th class="info">お支払方法</th>
                                     <td class="text-left">
                                     </td>
                                  </tr>
                              </table>
                              <%= link_to "ご予約を確定する", public_thanks_reservation_path, class: 'btn btn-primary col-xs-12' %>
                        </div>
          </div>
      </body>
    </main>
