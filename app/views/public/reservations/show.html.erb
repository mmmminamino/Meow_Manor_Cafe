<!--予約情報確認画面-->
<!DOCTYPE html>
<html lang="ja">
<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
    <main>
      <body>
          <div class="container">
          <div class="row">
            <h4>ご予約情報の確認</h4>
                <div class="list-body">
                    <table class="table table-hover table-inverse table-bordered">
                        <thead>
                            <tr class="info">
                                <th>ご予約日時</th>
                                <th>訪問人数</th>
                                <th>ご予約者様のお名前</th>
                            </tr>
                        </thead>
                        <tbody>
                                <tr>
                                    <td class="text-left">
                                        <%= @reservation.date_and_time %>
                                    </td>
                                    <td class="text-right">
                                        <%= @reservation.number_of_people %>名様
                                    </td>
                                    <td class="text-right">
                                        <%= current_customer.first_name %><%= current_customer.last_name %>様
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                    <div class="col-xs-4 col-xs-offset-4">
                        <%= link_to "ご予約を確定する", public_thanks_reservation_path, class: 'btn btn_-lg btn-outline-dark col-xs-12' %>
                    </div>
                </div>
          </div>
          </div>
      </body>
    </main>
</html>