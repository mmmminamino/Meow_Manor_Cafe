<!--予約情報入力画面-->
<div class="container">
    <div class="row">
        <div class="list-head">
            <h4>ご予約情報の入力</h4>
        </div>
        <div class="list-body">
            <%= form_with model: @reservation, url: public_reservations_path, method: :post do |f| %>
                <p>ご予約内容を入力してください</p>
                <%= f.label :ご予約者様のお名前 %>
                (姓)<%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>  (名)<%= f.text_field :first_name, autofocus: true, placeholder:"道子" %>
                <%= f.label :フリガナ %>
                (姓)<%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ" %>  (名)<%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ" %>
                <%= f.label :Email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                <%= f.label :"電話番号(ハイフンなし)" %>
                <%= f.text_field :telephone_number, autofocus: true, placeholder:"00000000000" %>
                <%= f.label :"生年月日" %>
                <%= f.date_select :birthday, {start_year: 1950, end_year: 2023,include_blank: true, use_two_digit_numbers: true},{class: "input-tab birthday-select"} %>
                <%= f.label :number_of_people, class: "mt-2 font-weight-bold" do %>
                    <i class="fa fa-caret-right mr-1 pp-text"></i>訪問人数を選択してください (最大5名様)
                <% end %>
                <%= f.select :number_of_people, (1..5).map {|num| num.to_s + "名"}, {}, {class: 'form-control'} %>
                <%= f.label :date_and_time, class: "mt-2 font-weight-bold" do %>
                    <i class="fa fa-caret-right mr-1 pp-text"></i>ご利用日時
                <% end %>
                <div class="reserve date">
                    <%= f.date_select :date_and_time, {start_year: 2023, end_year: 2024,use_month_numbers: true},{class: "input-tab birthday-select"} %>
                </div>
                 <br>
                <%= f.submit "ご予約情報の確認へ", class: 'btn btn_-lg btn-outline-dark'%>
            <%end%>
        </div>
        </div>
    </div>
</div>